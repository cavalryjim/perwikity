<div id="badge">
  <img src="http://www.gravatar.com/avatar/<%= Digest::MD5.hexdigest(current_user.email) %>?s=60" />
  <span><%= current_user.login %></span>
  <p><%= current_user.name.blank? ? "Anonymous Fool" : current_user.name %></p>
  <p><%= link_to 'edit account', edit_user_path(current_user) %> / <%= link_to "logout", logout_path %></p>
</div>